{
  "name": "echarts-wrapper-react",
  "version": "1.0.7",
  "description": "React Wrapper for Apache Echarts",
  "type": "module",
  "homepage": "https://echarts-wrapper-react-examples.netlify.app/",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write --parser typescript '**/*.{ts,tsx}'",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore --fix"
  },
  "author": "Simform Solutions",
  "repository": {
    "type": "git",
    "url": "https://github.com/react-mern/echarts-wrapper-react.git"
  },
  "bugs": {
    "url": "https://github.com/react-mern/echarts-wrapper-react/issues"
  },
  "keywords": [
    "react",
    "echarts",
    "charts",
    "chart",
    "data-visualization",
    "visualization",
    "react-component",
    "graph",
    "wrapper",
    "echarts-wrapper",
    "charting-library",
    "echarts-react",
    "react-echarts",
    "interactive-charts"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "peerDependencies": {
    "echarts": "^5.5.0",
    "echarts-gl": "^2.0.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "vite-plugin-dts": "^3.9.1",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
